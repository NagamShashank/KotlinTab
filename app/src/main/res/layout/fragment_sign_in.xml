<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SignInFragment"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_100sdp"
        android:layout_marginHorizontal="@dimen/_40sdp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Sign In"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:textColor="@color/purple" />

            <LinearLayout
                android:id="@+id/LayoutUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border_line">

                <EditText
                    android:id="@+id/Edit_text_Username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Username"
                    android:layout_marginHorizontal="@dimen/_5ssp"
                    android:inputType="text"
                    android:maxLength="10"
                    android:textSize="@dimen/_12ssp"
                    android:backgroundTint="@color/white"
                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm1234567890"/>

            </LinearLayout>

            <TextView
                android:id="@+id/user_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/Red"/>

            <!--
            <LinearLayout
                android:id="@+id/LayoutPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border_line"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5ssp"
                    android:backgroundTint="@color/white"
                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNM qwertyuiopasdfghjklzxcvbnm@#$%*_-+1234567890"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:maxLength="6"
                    android:drawableEnd="@drawable/password_invisible"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>
            -->

            <LinearLayout
                android:id="@+id/LayoutPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border_line">

                <EditText
                    android:id="@+id/Password"
                    android:hint="Password"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:layout_marginHorizontal="@dimen/_5ssp"
                    android:textSize="@dimen/_12ssp"
                    android:inputType="textPassword"
                    android:maxLength="6"
                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNM qwertyuiopasdfghjklzxcvbnm@#$%*_-+1234567890"/>

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:id="@+id/passwordToggle"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/password_invisible"/>

            </LinearLayout>

            <TextView
                android:id="@+id/password_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/Red"/>

            <Button
                android:id="@+id/SignInBtn"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign In"
                android:background="@drawable/btn_background"
                android:textAllCaps="false"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>