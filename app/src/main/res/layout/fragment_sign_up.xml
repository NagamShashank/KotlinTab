<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SignUpFragment"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_40sdp"
        android:outlineSpotShadowColor="@color/purple">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_20sdp"
                android:text="Sign Up"
                android:textColor="@color/purple"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/SignUpLayoutUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border_line"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/SignUpUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5ssp"
                    android:backgroundTint="@color/white"
                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNM qwertyuiopasdfghjklzxcvbnm1234567890"
                    android:hint="Username"
                    android:inputType="text"
                    android:maxLength="10"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <TextView
                android:id="@+id/user_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/Red"/>

            <LinearLayout
                android:id="@+id/SighUpLayoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border_line"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/SignUpEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5ssp"
                    android:backgroundTint="@color/white"
                    android:digits="qwertyuiopasdfghjklzxcvbnm@#$%*_-.1234567890"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <TextView
                android:id="@+id/Email_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/Red"/>

            <LinearLayout
                android:id="@+id/SignUpLayoutContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:background="@drawable/border_line">

                <TextView
                    android:id="@+id/countryCode"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="+00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"/>

                <Spinner
                    android:id="@+id/Spinner"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:spinnerMode="dialog"
                    android:contentDescription="select"/>

                <EditText
                    android:id="@+id/SignUpContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textSize="@dimen/_12sdp"
                    android:backgroundTint="@color/white"
                    android:digits="1234567890"/>

            </LinearLayout>

            <TextView
                android:id="@+id/Contact_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/Red"/>

            <LinearLayout
                android:id="@+id/SighUpLayoutPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border_line"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/SignUpPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_5ssp"
                    android:backgroundTint="@color/white"
                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNM qwertyuiopasdfghjklzxcvbnm@#$%*_-+1234567890"
                    android:hint="Password"
                    android:maxLength="8"
                    android:inputType="textPassword"
                    android:drawableEnd="@drawable/password_invisible"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <TextView
                android:id="@+id/Password_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/Red"/>

            <Button
                android:id="@+id/SignUpBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_18sdp"
                android:text="Sign Up"
                android:background="@drawable/btn_background"
                android:textAllCaps="false" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>